{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "radioberry": {
      "projectType": "application",
      "@schematics/angular:application": {
        "strict": true
      },
      "root": "",
      "sourceRoot": "webapp",
      "prefix": "rb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "webapp/index.html",
            "main": "webapp/main.ts",
            "polyfills": "webapp/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "webapp/favicon.ico",
              "webapp/assets",
              "webapp/assets/image"
            ],
            "styles": [
              "webapp/styles.css"
            ],
            "scripts": [
              "webapp/assets/js-libs/SegmentDisplay/segment-display.js",
              "webapp/assets/js-libs/DialKnob/jogDial.js",
              "webapp/assets/js-libs/Numeral/numeral.js",
              "webapp/assets/js-libs/pure-knob/pureknob.js",
              "webapp/assets/js-libs/WebAudio/pcmplayer.js",

              "webapp/assets/js-libs/WebAudio/mic.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "webapp/environments/environment.ts",
                  "with": "webapp/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "radioberry:build:production"
            },
            "development": {
              "browserTarget": "radioberry:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "radioberry:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "webapp/test.ts",
            "polyfills": "webapp/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "webapp/favicon.ico",
              "webapp/assets"
            ],
            "styles": [
              "webapp/styles.css"
            ],
            "scripts": [
              "webapp/assets/js-libs/SegmentDisplay/segment-display.js",
              "webapp/assets/js-libs/DialKnob/jogDial.js",
              "webapp/assets/js-libs/Numeral/numeral.js",
              "webapp/assets/js-libs/pure-knob/pureknob.js",
              "webapp/assets/js-libs/WebAudio/pcmplayer.js",

              "webapp/assets/js-libs/WebAudio/mic.js"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "radioberry:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "radioberry:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "radioberry"
}
